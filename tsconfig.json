{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/channeling/*": ["./components/layout/channeling/*"],
      "@/icons/*": ["./public/assets/icons/*"],
      "@/images/*": ["./public/assets/images/*"],
      "@/shadcn/*": ["./components/shadcn/*"],
      "@/components/*": ["./components/*"],

      "@/actions/*": ["./helpers/actions/*"],
      "@/schemas/*": ["./helpers/validation/*"],
      "@/contexts/*": ["./helpers/contexts/*"],
      "@/templates/*": ["./helpers/templates/*"],
      "@/connectors/*": ["./helpers/connectors/*"],
      "@/models/*": ["./helpers/models/*"],
      "@/styles/*": ["./helpers/styles/*"],
      "@/types/*": ["./helpers/types/*"],
      "@/hooks/*": ["./helpers/hooks/*"],
      "@/libs/*": ["./helpers/libs/*"],
      "@/utils/*": ["./helpers/utils/*"],

      "@/helpers/*": ["./helpers/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
